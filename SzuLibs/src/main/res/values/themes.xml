<resources>
    <!-- Base application theme. -->
    <style name="Theme.Szu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#00000000</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" >true</item>

        <!-- 使导航栏透明 -->
        <item name="android:navigationBarColor">#01FFFFFF</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- 去除所有overScroll -->
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Theme.SzuRedColorSecondary" parent="Theme.Szu">
        <item name="colorSecondary">@color/szu_red</item>
    </style>
</resources>